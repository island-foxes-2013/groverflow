- if flash[:errors]
  %p.errors
    = flash[:errors]

= form_for @question, {html: {id: "gen_form"} } do |f| 
  .form-title
    %h1 We're here to help!
    =image_tag "grover_side.png", height: 100
  %p
    = f.text_field :title, {class: "text", placeholder: "your question"}
    - if @question.errors[:title].any?
      %span.errors
        = @question.errors[:title].join(',')
  %p
    = f.text_area :content, {class: "textarea", placeholder: "some helpful details"}
    - if @question.errors[:content].any?
      %span.errors
        = @question.errors[:content].join(',')
  %p= f.submit 'Ask!', {class: "submit"}