.container
  - if @errors
    - @errors.each do |error|
      %p= error
  .col-lg-12
    = form_for @user do |f|
      = f.label :email
      = f.email_field :email
      %br
      = f.label :username
      = f.text_field :username
      %br
      = f.label :password
      = f.password_field :password
      %br
      = f.submit

