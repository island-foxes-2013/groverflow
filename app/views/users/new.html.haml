= form_for @user do |f|
  .form-title
    %h1 Signup
  %p= f.email_field :email, {class: "text", placeholder: "your email"}
  %p= f.text_field :username, {class: "text", placeholder: "your email"}
  %p= f.password_field :password, {class: "text", placeholder: "your password"}
  %br
  = f.submit "Signup", {class: "submit"}
  - if @errors
    - @errors.each do |error|
      %p= error

